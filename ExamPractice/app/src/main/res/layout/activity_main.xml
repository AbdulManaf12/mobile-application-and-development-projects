<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mid_term_exam_practice"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_margin="15dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="@string/widgets"
            android:layout_gravity="center"
            android:onClick="gotoWidgets"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Layouts"
            android:layout_gravity="center"
            android:onClick="gotoLayouts"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Activity LifeCycle"
            android:layout_gravity="center"
            android:onClick="gotoActivityLifeCycle"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Open Camera"
            android:layout_gravity="center"
            android:onClick="openCamera"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Filing &amp; Adapter"
            android:layout_gravity="center"
            android:onClick="openFilingAndAdapter"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Media Player"
            android:layout_gravity="center"
            android:onClick="openMediaPlayer"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Menu"
            android:layout_gravity="center"
            android:onClick="openMenu"/>
    </ScrollView>
</LinearLayout>